{%- liquid
  assign color_scheme = 'color-' | append: section.settings.color_scheme
  assign animation_anchor = '#StaticTimeline--' | append: section.id
  assign animation_order = 0

  capture style
    echo '--PT: ' | append: section.settings.padding_top | append: 'px;'
    echo '--PB: ' | append: section.settings.padding_bottom | append: 'px;'
  endcapture
-%}

<script src="{{ 'timeline.js' | asset_url }}" defer="defer"></script>

<section
  id="StaticTimeline--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="static-timeline"
  class="static-timeline {{ color_scheme }}"
  style="{{ style }}"
>
  <div class="static-timeline__container">
    {%- comment -%} IMAGE SIDE - Shows first on mobile {%- endcomment -%}
    <div class="static-timeline__image-side">
      {%- if section.settings.image != blank -%}
        <div class="static-timeline__image-wrapper">
          <img 
            src="{{ section.settings.image | image_url: width: 1200 }}"
            srcset="{{ section.settings.image | image_url: width: 500 }} 500w,
                    {{ section.settings.image | image_url: width: 750 }} 750w,
                    {{ section.settings.image | image_url: width: 1000 }} 1000w,
                    {{ section.settings.image | image_url: width: 1200 }} 1200w"
            sizes="(max-width: 768px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy">
        </div>
      {%- else -%}
        <div class="static-timeline__placeholder">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} TIMELINE SIDE {%- endcomment -%}
    <div class="static-timeline__content">
      <timeline-component class="static-timeline__timeline-wrapper" data-timeline-mobile>
        {%- if request.design_mode -%}
          {%- assign blocks_counter_design = 0 -%}
          {%- for block in section.blocks -%}
            {%- if block.settings.heading != blank or block.settings.text != blank -%}
              <div
                class="timeline__row__editor"
                data-timeline-row-editor
                style="--row-count: {{ blocks_counter_design }};"
                {{ block.shopify_attributes }}
              >
                &nbsp;
              </div>
              {%- assign blocks_counter_design = blocks_counter_design | plus: 1 -%}
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}

        <div class="static-timeline__content-inner" data-timeline-rows>
          {%- assign blocks_counter = 0 -%}
          {%- for block in section.blocks -%}
            {%- if block.settings.heading != blank or block.settings.text != blank -%}
              {%- assign blocks_counter = blocks_counter | plus: 1 -%}
              
              <div class="static-timeline__item{% if blocks_counter == 1 %} is-selected{% endif %}" data-timeline-row {{ block.shopify_attributes }}>
                <div class="static-timeline__item-content">
                  <div class="static-timeline__dot-wrapper">
                    <span class="static-timeline__dot"></span>
                    {%- unless forloop.last -%}
                      <span class="static-timeline__line"></span>
                    {%- endunless -%}
                  </div>
                  
                  <div class="static-timeline__text">
                    {%- if block.settings.heading != blank -%}
                      {%- liquid
                        assign heading_tag = 'h3'

                        unless block.settings.heading_tag == 'automatic' or block.settings.heading_tag == blank
                          assign heading_tag = block.settings.heading_tag
                        endunless
                      -%}

                      <{{ heading_tag }} class="static-timeline__heading {{ block.settings.heading_font_size }}">
                        {{ block.settings.heading }}
                      </{{ heading_tag }}>
                    {%- endif -%}

                    {%- if block.settings.text != blank -%}
                      <div class="static-timeline__body {{ block.settings.text_font_size }} rte">
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                  </div>
                </div>

                {%- comment -%} Timeline indicator for mobile swiper {%- endcomment -%}
                <span class="static-timeline__indicator" data-target-index="{{ blocks_counter }}">
                  <span class="static-timeline__indicator-line">&nbsp;</span>
                </span>

                <div class="static-timeline__dot-mobile-wrapper" data-target-index="{{ blocks_counter }}">
                  <div class="static-timeline__dot-mobile-holder">
                    <button
                      type="button"
                      class="static-timeline__dot-mobile-button"
                      aria-label="Scroll to item {{ blocks_counter }}"
                      data-timeline-button
                    >
                      <span class="static-timeline__dot-mobile">&nbsp;</span>
                    </button>
                  </div>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </timeline-component>
    </div>
  </div>
</section>

<style>
  .static-timeline {
    width: 100%;
  }

  .static-timeline__container {
    display: flex;
  }

  .static-timeline__content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 4rem;
    order: 1;
  }

  .static-timeline__timeline-wrapper {
    width: 100%;
    max-width: 600px;
  }

  .static-timeline__content-inner {
    width: 100%;
  }

  .static-timeline__item {
    display: flex;
    gap: 2.5rem;
    position: relative;
  }

  .static-timeline__item-content {
    display: flex;
    gap: 2.5rem;
    width: 100%;
  }

  .static-timeline__item:not(:last-child) {
    margin-bottom: 4rem;
  }

  .static-timeline__dot-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }

  .static-timeline__dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: currentColor;
    position: relative;
    z-index: 2;
    flex-shrink: 0;
  }

  .static-timeline__line {
    width: 2px;
    flex: 1;
    background-color: currentColor;
    margin-top: 0.5rem;
    opacity: 0.3;
  }

  .static-timeline__text {
    flex: 1;
    padding-top: 0;
  }

  .static-timeline__heading {
    font-family: 'American Grotesk', sans-serif;
    text-transform: uppercase;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem;
  }

  .static-timeline__body {
    font-family: 'HK Grotesk', sans-serif;
    line-height: 1.6;
    margin: 0;
  }

  .static-timeline__image-side {
    width: 50vw;
    position: relative;
    overflow: hidden;
    order: 2;
  }

  .static-timeline__image-wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .static-timeline__image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .static-timeline__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.3;
  }

  /* Hide mobile timeline controls on desktop */
  .static-timeline__indicator,
  .static-timeline__dot-mobile-wrapper {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .static-timeline__container {
      flex-direction: column;
      min-height: auto;
    }

    .static-timeline__image-side {
      width: 100%;
      min-height: 40vh;
      position: relative;
      order: 1;
    }

    .static-timeline__content {
      padding: 0;
      order: 2;
      display: block;
    }

    .static-timeline__timeline-wrapper {
      max-width: 100%;
    }

    .static-timeline__content-inner {
      position: relative;
      overflow-x: auto;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
      display: flex;
      padding: 4rem 0 6rem;
    }

    .static-timeline__item {
      flex: 0 0 calc(100vw - 64px);
      scroll-snap-align: center;
      margin: 0 32px;
      flex-direction: column;
    }

    .static-timeline__item:not(:last-child) {
      margin-bottom: 0;
    }

    .static-timeline__item-content {
      gap: 1.5rem;
    }

    /* Hide desktop timeline dots/lines on mobile */
    .static-timeline__dot-wrapper {
      display: none;
    }

    /* Show mobile timeline indicators */
    .static-timeline__indicator {
      display: block;
      position: absolute;
      bottom: 2.5rem;
      left: 32px;
      right: 32px;
      height: 2px;
      background-color: currentColor;
      opacity: 0.2;
    }

    .static-timeline__indicator-line {
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      background-color: currentColor;
      transition: width 0.3s ease;
      width: 0;
    }

    .static-timeline__item.is-selected .static-timeline__indicator-line {
      width: 100%;
    }

    .static-timeline__dot-mobile-wrapper {
      display: block;
      position: absolute;
      bottom: 1.5rem;
      left: 32px;
      right: 32px;
      height: 20px;
      pointer-events: none;
    }

    .static-timeline__dot-mobile-holder {
      position: relative;
      height: 100%;
    }

    .static-timeline__dot-mobile-button {
      position: absolute;
      left: 0;
      top: 50%;
      transform: translate(-50%, -50%);
      padding: 10px;
      background: transparent;
      border: none;
      cursor: pointer;
      pointer-events: auto;
      transition: left 0.3s ease;
    }

    .static-timeline__dot-mobile {
      display: block;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background-color: currentColor;
    }

    .static-timeline__text {
      padding-top: 0;
    }
  }
</style>

{% schema %}
{
  "name": "Static Timeline",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_1",
      "label": "Color scheme"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom",
      "default": 0
    }
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "type": "timeline_item",
      "name": "Timeline Item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Timeline Point"
        },
        {
          "type": "select",
          "id": "heading_font_size",
          "label": "Heading size",
          "default": "heading-medium",
          "options": [
            {"value": "heading-mini", "label": "Mini"},
            {"value": "heading-x-small", "label": "Extra small"},
            {"value": "heading-small", "label": "Small"},
            {"value": "heading-medium", "label": "Medium"},
            {"value": "heading-large", "label": "Large"},
            {"value": "heading-x-large", "label": "Extra large"}
          ]
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add your timeline description here.</p>"
        },
        {
          "type": "select",
          "id": "text_font_size",
          "label": "Text size",
          "default": "body-medium",
          "options": [
            {"value": "body-x-small", "label": "Extra small"},
            {"value": "body-small", "label": "Small"},
            {"value": "body-medium", "label": "Medium"},
            {"value": "body-large", "label": "Large"},
            {"value": "body-x-large", "label": "Extra large"}
          ]
        },
        {
          "type": "header",
          "content": "Advanced"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Heading SEO tag",
          "default": "automatic",
          "options": [
            {"value": "automatic", "label": "Automatic"},
            {"value": "h1", "label": "H1"},
            {"value": "h2", "label": "H2"},
            {"value": "h3", "label": "H3"},
            {"value": "h4", "label": "H4"},
            {"value": "h5", "label": "H5"},
            {"value": "h6", "label": "H6"}
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Static Timeline",
      "blocks": [
        {
          "type": "timeline_item",
          "settings": {
            "heading": "Step One",
            "text": "<p>Describe the first milestone here.</p>"
          }
        },
        {
          "type": "timeline_item",
          "settings": {
            "heading": "Step Two",
            "text": "<p>Describe the second milestone here.</p>"
          }
        },
        {
          "type": "timeline_item",
          "settings": {
            "heading": "Step Three",
            "text": "<p>Describe the third milestone here.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}