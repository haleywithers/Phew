{%- liquid
  assign color_scheme = 'color-' | append: section.settings.color_scheme
  assign animation_anchor = '#StaticTimeline--' | append: section.id
  assign animation_order = 0
  assign dot_background = section.settings.dot_background

  capture style
    echo '--PT: ' | append: section.settings.padding_top | append: 'px;'
    echo '--PB: ' | append: section.settings.padding_bottom | append: 'px;'
  endcapture
-%}

<script src="{{ 'timeline.js' | asset_url }}" defer="defer"></script>

<section
  id="StaticTimeline--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="timeline"
  class="static-timeline timeline {{ color_scheme }}"
  style="{{ style }}"
>
  <div class="static-timeline__container">
    {%- comment -%} IMAGE SIDE {%- endcomment -%}
    <div class="static-timeline__image-side">
      {%- if section.settings.image != blank -%}
        <div class="static-timeline__image-wrapper">
          <img 
            src="{{ section.settings.image | image_url: width: 1200 }}"
            srcset="{{ section.settings.image | image_url: width: 500 }} 500w,
                    {{ section.settings.image | image_url: width: 750 }} 750w,
                    {{ section.settings.image | image_url: width: 1000 }} 1000w,
                    {{ section.settings.image | image_url: width: 1200 }} 1200w"
            sizes="(max-width: 768px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy">
        </div>
      {%- else -%}
        <div class="static-timeline__placeholder">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} DESKTOP TIMELINE {%- endcomment -%}
    <div class="static-timeline__desktop">
      <div class="static-timeline__desktop-inner">
        {%- for block in section.blocks -%}
          {%- if block.settings.heading != blank or block.settings.text != blank -%}
            <div class="static-timeline__item" {{ block.shopify_attributes }}>
              <div class="static-timeline__dot-wrapper">
                <span class="static-timeline__dot"></span>
                {%- unless forloop.last -%}
                  <span class="static-timeline__line"></span>
                {%- endunless -%}
              </div>
              
              <div class="static-timeline__text">
                {%- if block.settings.heading != blank -%}
                  {%- liquid
                    assign heading_tag = 'h3'

                    unless block.settings.heading_tag == 'automatic' or block.settings.heading_tag == blank
                      assign heading_tag = block.settings.heading_tag
                    endunless
                  -%}

                  <{{ heading_tag }} class="static-timeline__heading {{ block.settings.heading_font_size }}">
                    {{ block.settings.heading }}
                  </{{ heading_tag }}>
                {%- endif -%}

                {%- if block.settings.text != blank -%}
                  <div class="static-timeline__body {{ block.settings.text_font_size }} rte">
                    {{ block.settings.text }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    {%- comment -%} MOBILE TIMELINE - Uses theme's timeline classes {%- endcomment -%}
    <div class="static-timeline__mobile">
      <div class="timeline__wrapper">
        <timeline-component class="timeline__body">
          {%- if request.design_mode -%}
            {%- assign blocks_counter_design = 0 -%}
            {%- for block in section.blocks -%}
              {%- if block.settings.heading != blank or block.settings.text != blank -%}
                <div
                  class="timeline__row__editor"
                  data-timeline-row-editor
                  style="--row-count: {{ blocks_counter_design }};"
                  {{ block.shopify_attributes }}
                >
                  &nbsp;
                </div>
                {%- assign blocks_counter_design = blocks_counter_design | plus: 1 -%}
              {%- endif -%}
            {%- endfor -%}
          {%- endif -%}

          <div
            class="timeline__inner"
            data-timeline-rows
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="{{ animation_order }}"
            {% if request.design_mode %}
              data-block-scroll
            {% endif %}
          >
            {%- assign blocks_counter = 0 -%}
            {%- for block in section.blocks -%}
              {%- if block.settings.heading != blank or block.settings.text != blank -%}
                {%- assign blocks_counter = blocks_counter | plus: 1 -%}
                {%- assign animation_order = animation_order | plus: 1 -%}
                
                <div class="timeline__row{% if blocks_counter == 1 %} is-selected{% endif %}" data-timeline-row>
                  <div class="timeline__content">
                    <div class="timeline__content__outer">
                      <div
                        class="timeline__content__inner"
                        data-aos="hero"
                        data-aos-anchor="{{ animation_anchor }}"
                        data-aos-order="{{ animation_order }}"
                        data-target-index="{{ blocks_counter }}"
                      >
                        {%- if block.settings.heading != blank -%}
                          {%- liquid
                            assign heading_tag = 'h2'

                            unless block.settings.heading_tag == 'automatic' or block.settings.heading_tag == blank
                              assign heading_tag = block.settings.heading_tag
                            endunless
                          -%}

                          <{{ heading_tag }} class="hero__title {{ block.settings.heading_font_size }}">
                            {{ block.settings.heading }}
                          </{{ heading_tag }}>
                        {%- endif -%}

                        {%- if block.settings.text != blank -%}
                          <div class="hero__rte {{ block.settings.text_font_size }}">
                            {{ block.settings.text }}
                          </div>
                        {%- endif -%}
                      </div>
                    </div>

                    <span
                      class="timeline__indicator"
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="{{ animation_order }}"
                      data-target-index="{{ blocks_counter }}"
                    >
                      <span class="timeline__indicator__line">&nbsp;</span>
                    </span>

                    <div
                      class="timeline__dot__wrapper"
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="{{ animation_order }}"
                      data-target-index="{{ blocks_counter }}"
                    >
                      <div class="timeline__dot__holder">
                        <button
                          type="button"
                          class="timeline__dot__button"
                          aria-label="{{ 'general.accessibility.scroll_to_product' | t }}"
                          data-timeline-button
                        >
                          <span class="timeline__dot">&nbsp;</span>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </timeline-component>
      </div>
    </div>
  </div>
</section>

{%- style -%}
  #StaticTimeline--{{ section.id }} {
    --counter: {{ blocks_counter }};
  }

  {%- if dot_background != 'rgba(0,0,0,0)' and dot_background != '' -%}
    #StaticTimeline--{{ section.id }} .timeline__indicator,
    #StaticTimeline--{{ section.id }} .timeline__dot { --text: {{ dot_background }}; }
  {%- endif -%}
  
  /* Override timeline animation - keep lines always visible at full opacity */
  #StaticTimeline--{{ section.id }} .timeline__indicator__line {
    width: 100% !important;
    opacity: 1 !important;
  }
{%- endstyle -%}

<style>
  .static-timeline {
    width: 100%;
    overflow-x: hidden;
  }

  .static-timeline__container {
    display: flex;
  }

  /* DESKTOP STYLES */
  .static-timeline__desktop {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 4rem;
    order: 1;
  }

  .static-timeline__desktop-inner {
    max-width: 600px;
    width: 100%;
  }

  .static-timeline__item {
    display: flex;
    gap: 2.5rem;
  }

  .static-timeline__item:not(:last-child) {
    margin-bottom: 4rem;
  }

  .static-timeline__item:last-child {
    .static-timeline__text {
    padding-bottom: 0 !important;

    p {
    margin-bottom: 0 !important
  }
  }
  }

  .static-timeline__dot-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }

  .static-timeline__dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: currentColor;
    position: relative;
    z-index: 2;
    flex-shrink: 0;
  }

  .static-timeline__line {
    width: 2px;
    flex: 1;
    background-color: currentColor;
    margin-top: 0.5rem;
    opacity: 0.3;
  }

  .static-timeline__text {
    flex: 1;
    padding-top: 0;
    padding-bottom:4rem;
  }

  .static-timeline__heading {
    font-family: 'American Grotesk', sans-serif;
    text-transform: uppercase;
    font-weight: 700;
    line-height: 1.2;
    margin: -9px 0 1rem 0;
  }

  .static-timeline__body {
    font-family: 'HK Grotesk', sans-serif;
    line-height: 1.6;
    margin: 0;
  }

  .static-timeline__image-side {
    width: 50vw;
    position: relative;
    overflow: hidden;
    order: 2;
  }

  .static-timeline__image-wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .static-timeline__image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  #StaticTimeline--{{ section.id }} .static-timeline__image-wrapper img {
  {%- if section.settings.image.presentation.focal_point -%}
    object-position: {{ section.settings.image.presentation.focal_point.x | times: 100 }}% {{ section.settings.image.presentation.focal_point.y | times: 100 }}%;
  {%- else -%}
    object-position: center;
  {%- endif -%}
}

  .static-timeline__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.3;
  }

  /* Hide mobile on desktop */
  .static-timeline__mobile {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .static-timeline__container {
      flex-direction: column;
    }

    .static-timeline__image-side {
      width: 100%;
      min-height: 40vh;
      order: 1;
    }

    /* Hide desktop on mobile */
    .static-timeline__desktop {
      display: none;
    }

    /* Show mobile timeline */
    .static-timeline__mobile {
      display: block;
      order: 2;
      width: 100%;
      overflow-x: hidden;
    }
  }
</style>

